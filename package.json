{
  "private": true,
  "name": "vibecape-monorepo",
  "workspaces": [
    "package",
    "homepage"
  ],
  "scripts": {
    "page":"npm -w homepage run dev",
    "build": "npm -w package run build && npm -w homepage run build",
    "build:cli": "npm -w package run build",
    "build:site": "npm -w homepage run build",
    "publish": "bash ./scripts/publish.sh patch"
  },
  "engines": {
    "node": ">=18.18.0"
  }
}